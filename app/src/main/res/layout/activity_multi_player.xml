<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shape">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Player one 0:"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="0 Player two"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_00"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_01"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_02"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_10"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_11"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_12"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_20"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_21"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

            <Button
                android:id="@+id/btn_22"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:padding="25dp"
                android:textColor="@color/colorMagenta"
                android:textSize="48sp" />

        </TableRow>


    </TableLayout>

    <ImageView
        android:id="@+id/imgAgain2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp"
        android:contentDescription="Repeating the game"
        android:rotation="-90"
        android:scaleType="center"
        android:src="@drawable/ic_repeat" />


</FrameLayout>